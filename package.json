{
    "name": "emotional-support-app",
    "version": "1.0.0",
    "private": true,
    "description": "An emotional support application with Express backend and React frontend using MongoDB and Claude/ElevenLabs APIs",
    "scripts": {
      "start:server": "node server.js",
      "start:client": "cd client && npm start",
      "dev:server": "nodemon server.js",
      "install:all": "npm install && cd client && npm install",
      "start": "concurrently \"npm run start:server\" \"npm run start:client\""
    },
    "dependencies": {
      "express": "^4.18.2",
      "dotenv": "^16.3.1",
      "mongoose": "^7.6.3",
      "cors": "^2.8.5",
      "bcrypt": "^5.1.1",
      "jsonwebtoken": "^9.0.2",
      "axios": "^1.6.2",
      "body-parser": "^1.20.2",
      "express-rate-limit": "^7.1.4",
      "helmet": "^7.1.0"
    },
    "devDependencies": {
      "nodemon": "^3.0.1",
      "concurrently": "^8.2.2"
    },
    "engines": {
      "node": ">=16.0.0"
    }
  }