{
    "name": "emotional-support-app",
    "version": "1.0.0",
    "private": true,
    "description": "An emotional support application with Express backend and React frontend using MongoDB and Claude/ElevenLabs APIs",
    "scripts": {
        "start:server": "node server.js",
        "start:client": "cd client && npm start",
        "dev:server": "nodemon server.js",
        "install:all": "npm install && cd client && npm install",
        "start": "concurrently \"npm run start:server\" \"npm run start:client\""
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.41.0",
        "axios": "^1.6.2",
        "bcrypt": "^5.1.1",
        "body-parser": "^1.20.2",
        "compression": "^1.8.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.5.0",
        "helmet": "^7.2.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^7.6.3",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "nodemon": "^3.0.1"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}
