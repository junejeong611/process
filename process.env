# .env.example
# Copy this file to .env and fill in your values

# Server configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/emotionalSupportApp?retryWrites=true&w=majority

# Security
JWT_SECRET=your_jwt_secret_here
COOKIE_SECRET=your_cookie_secret_here
JWT_EXPIRATION=7d

# API Rate Limits
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Claude API configuration
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_API_MODEL=claude-3-sonnet-20240229
CLAUDE_API_URL=https://api.anthropic.com/v1/messages

# ElevenLabs API configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_MODEL_ID=eleven_multilingual_v2  # or another model ID
ELEVENLABS_VOICE_ID=your_preferred_voice_id_here  # Default voice ID
ELEVENLABS_API_URL=https://api.elevenlabs.io/v1

# Optional: Audio settings
AUDIO_FORMAT=mp3
AUDIO_QUALITY=medium  # low, medium, high
AUDIO_STABILITY=0.5  # 0-1, higher for more consistent voice
AUDIO_CACHE_DIR=./audio-cache

# Optional: Conversation settings
MAX_CONVERSATION_HISTORY=10  # Number of messages to keep in context
SYSTEM_PROMPT="You are an empathetic emotional support assistant..."

# Optional: Monitoring
ENABLE_ANALYTICS=false
ERROR_LOGGING_LEVEL=error  # debug, info, warn, error